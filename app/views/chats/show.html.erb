<div class='container'>
  <div class='row'>

    <h4 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>">
    <%= @user.name %> さんとのチャット</h4>
  </div>

  <div class='row'>
    <div class='col-md-4'>
      <div class="errors">
        <%= render "layouts/errors", obj: @chat %>
      </div>

      <%= form_with model: @chat, local: false do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "送信" %>
      <% end %>
    </div>
    <div class='col-md-7 offset-md-1'>
      <div class="message" style="width: 400px;">
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
            <p style="text-align: right;"><%= chat.message %></p>
          <% else %>
            <p style="text-align: left;"><%= chat.message %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>